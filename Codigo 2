        // Función para generar la tabla de habilidades
        function generateSkillsTable() {
            const skillsContainer = document.getElementById('skills-container');
            skillsContainer.innerHTML = '';

            skillsConfig.forEach(skill => {
                const row = document.createElement('tr');
                
                // Obtener el modificador de atributo
                const attrMod = calculateModifier(parseInt(document.getElementById(`${skill.attribute}-total`).textContent));
                
                row.innerHTML = `
                    <td class="skill-name">${skill.name}</td>
                    <td>
                        <input type="number" class="skill-total" value="0" readonly>
                    </td>
                    <td>
                        <input type="checkbox" class="class-skill" data-skill="${skill.name.toLowerCase()}">
                    </td>
                    <td>
                        <input type="number" class="skill-ranks" value="0" min="0" max="${calculateNEP()}" 
                               onchange="updateSkillTotal('${skill.name}'); updateRanksSummary();">
                    </td>
                    <td class="attribute-col">${attrMod >= 0 ? `+${attrMod}` : attrMod}</td>
                    <td>
                        <input type="number" class="skill-racial" value="0" onchange="updateSkillTotal('${skill.name}')">
                    </td>
                    <td>
                        <input type="number" class="skill-misc" value="0" onchange="updateSkillTotal('${skill.name}')">
                    </td>
                    <td>
                        <input type="number" class="skill-armor" value="0" readonly>
                    </td>
                `;
                
                skillsContainer.appendChild(row);
            });
        }

        // Función para calcular rangos totales ganados
        function calculateTotalRanks() {
            const nep = calculateNEP();
            // Base: 2 + modificador de INT por nivel
            const intMod = calculateModifier(parseInt(document.getElementById('int-total').textContent));
            const totalRanksEarned = (2 + intMod) * nep;
            return totalRanksEarned;
        }

        // Función para actualizar el resumen de rangos
        function updateRanksSummary() {
            const totalEarned = calculateTotalRanks();
            const totalUsed = calculateUsedRanks();
            
            document.getElementById('total-ranks-earned').value = totalEarned;
            document.getElementById('total-ranks-used').value = totalUsed;
            document.getElementById('total-ranks-available').value = totalEarned - totalUsed;
        }

        // Función para calcular rangos usados
        function calculateUsedRanks() {
            let total = 0;
            document.querySelectorAll('.skill-ranks').forEach(input => {
                total += parseInt(input.value) || 0;
            });
            return total;
        }

        // Función para actualizar el total de una habilidad
        function updateSkillTotal(skillName) {
            const skillRow = findSkillRow(skillName);
            if (!skillRow) return;

            const ranks = parseInt(skillRow.querySelector('.skill-ranks').value) || 0;
            const racial = parseInt(skillRow.querySelector('.skill-racial').value) || 0;
            const misc = parseInt(skillRow.querySelector('.skill-misc').value) || 0;
            const armor = parseInt(skillRow.querySelector('.skill-armor').value) || 0;
            const isClassSkill = skillRow.querySelector('.class-skill').checked;
            
            // Obtener modificador de atributo
            const skillConfig = skillsConfig.find(s => s.name === skillName);
            const attrMod = calculateModifier(parseInt(document.getElementById(`${skillConfig.attribute}-total`).textContent));
            
            // Calcular total
            let total = ranks + attrMod + racial + misc + armor;
            if (isClassSkill && ranks > 0) {
                total += 3;
            }
            
            skillRow.querySelector('.skill-total').value = total;
        }

        // Función para encontrar la fila de una habilidad
        function findSkillRow(skillName) {
            const rows = document.querySelectorAll('#skills-container tr');
            for (let row of rows) {
                if (row.querySelector('.skill-name').textContent === skillName) {
                    return row;
                }
            }
            return null;
        }

