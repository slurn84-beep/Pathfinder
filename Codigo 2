        // JSON con modificadores de tamaño
        const sizeModifiers = {
            "diminuto": { ca: "+4", gaco: "+4", fuerza: "-12" },
            "menudo": { ca: "+2", gaco: "+2", fuerza: "-8" },
            "pequeño": { ca: "+1", gaco: "+1", fuerza: "-4" },
            "mediano": { ca: "+0", gaco: "+0", fuerza: "+0" },
            "grande": { ca: "-1", gaco: "-1", fuerza: "+4" },
            "enorme": { ca: "-2", gaco: "-2", fuerza: "+8" },
            "gargantuesco": { ca: "-4", gaco: "-4", fuerza: "+12" },
            "colosal": { ca: "-8", gaco: "-8", fuerza: "+16" }
        };

        // Variables para almacenar los bonificadores
        let racialBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
        let backgroundBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
        let levelBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
        let sizeBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };

        // Función para determinar el tamaño según la altura
        function calculateSizeFromHeight(height) {
            if (height <= 30) return "diminuto";
            if (height <= 60) return "menudo";
            if (height <= 120) return "pequeño";
            if (height <= 240) return "mediano";
            if (height <= 480) return "grande";
            if (height <= 960) return "enorme";
            if (height <= 1920) return "gargantuesco";
            return "colosal";
        }

        // Función para aplicar modificadores de tamaño
        function applySizeBonuses(size) {
            // Reiniciar bonificadores de tamaño
            sizeBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
            
            const modifiers = sizeModifiers[size];
            if (modifiers) {
                // Convertir el modificador de fuerza de string a número
                const fuerzaMod = parseInt(modifiers.fuerza);
                sizeBonus.str = fuerzaMod;
            }
            
            updateAttributes();
        }

        // Función para verificar y mostrar puntos de característica por nivel
        function checkAbilityPoints() {
            const nep = calculateNEP();
            const abilityLevels = [4, 8, 12, 16, 20, 24, 28, 32, 36, 40];
            const notification = document.getElementById('ability-point-notification');
            
            for (const level of abilityLevels) {
                if (nep >= level) {
                    document.getElementById('ability-level').textContent = level;
                    notification.style.display = 'block';
                    return;
                }
            }
            notification.style.display = 'none';
        }

        // Función para calcular el NEP (Nivel Efectivo de Personaje)
        function calculateNEP() {
            const class1Level = parseInt(document.getElementById('class1-level').value) || 0;
            const class2Level = parseInt(document.getElementById('class2-level').value) || 0;
            const class3Level = parseInt(document.getElementById('class3-level').value) || 0;
            const prestige1Level = parseInt(document.getElementById('prestige1-level').value) || 0;
            const prestige2Level = parseInt(document.getElementById('prestige2-level').value) || 0;
            const prestige3Level = parseInt(document.getElementById('prestige3-level').value) || 0;
            
            const totalLevels = class1Level + class2Level + class3Level + prestige1Level + prestige2Level + prestige3Level;
            document.getElementById('nep-value').textContent = totalLevels;
            document.getElementById('next-nep-value').textContent = totalLevels + 1;
            
            // Verificar puntos de característica
            checkAbilityPoints();
            
            return totalLevels;
        }

        // Función para calcular el modificador de un atributo
        function calculateModifier(value) {
            return Math.floor((value - 10) / 2);
        }

        // Función para formatear el modificador
        function formatModifier(modifier) {
            return modifier >= 0 ? `+${modifier}` : `${modifier}`;
        }

        // Función para actualizar los atributos
        function updateAttributes() {
            const attributes = ['str', 'dex', 'con', 'int', 'wis', 'cha'];
            
            attributes.forEach(attr => {
                const baseValue = parseInt(document.getElementById(`${attr}-base`).value) || 0;
                const total = baseValue + racialBonus[attr] + backgroundBonus[attr] + levelBonus[attr] + sizeBonus[attr];
                const modifier = calculateModifier(total);
                
                document.getElementById(`${attr}-total`).textContent = total;
                document.getElementById(`${attr}-mod`).textContent = formatModifier(modifier);
                
                // Actualizar modificadores en salvamentos
                if (attr === 'con') {
                    document.getElementById('fort-attr').textContent = formatModifier(modifier);
                } else if (attr === 'dex') {
                    document.getElementById('reflex-attr').textContent = formatModifier(modifier);
                } else if (attr === 'wis') {
                    document.getElementById('will-attr').textContent = formatModifier(modifier);
                }
            });
            
            // Actualizar salvamentos
            updateSavingThrows();
            // Actualizar habilidades
            updateAllSkillAttributes();
            // Actualizar rangos
            updateRanksSummary();
        }

        // Función para actualizar los salvamentos
        function updateSavingThrows() {
            const savingThrows = ['fort', 'reflex', 'will'];
            
            savingThrows.forEach(save => {
                const classBonus = parseInt(document.getElementById(`${save}-class`).value) || 0;
                const prestigeBonus = parseInt(document.getElementById(`${save}-prestige`).value) || 0;
                const miscBonus = parseInt(document.getElementById(`${save}-misc`).value) || 0;
                const manualBonus = parseInt(document.getElementById(`${save}-manual`).value) || 0;
                
                // Obtener el modificador de atributo
                let attrBonus = 0;
                if (save === 'fort') {
                    attrBonus = calculateModifier(parseInt(document.getElementById('con-total').textContent));
                } else if (save === 'reflex') {
                    attrBonus = calculateModifier(parseInt(document.getElementById('dex-total').textContent));
                } else if (save === 'will') {
                    attrBonus = calculateModifier(parseInt(document.getElementById('wis-total').textContent));
                }
                
                const total = classBonus + prestigeBonus + attrBonus + miscBonus + manualBonus;
                document.getElementById(`${save}-total`).textContent = total;
            });
        }

        // Función para actualizar la experiencia total
        function updateExperience() {
            const class1Exp = parseInt(document.getElementById('class1-exp').value) || 0;
            const class2Exp = parseInt(document.getElementById('class2-exp').value) || 0;
            const class3Exp = parseInt(document.getElementById('class3-exp').value) || 0;
            const prestige1Exp = parseInt(document.getElementById('prestige1-exp').value) || 0;
            const prestige2Exp = parseInt(document.getElementById('prestige2-exp').value) || 0;
            const prestige3Exp = parseInt(document.getElementById('prestige3-exp').value) || 0;
            
            const totalExp = class1Exp + class2Exp + class3Exp + prestige1Exp + prestige2Exp + prestige3Exp;
            document.getElementById('total-exp').value = totalExp;
            
            // Calcular experiencia acumulada (simplificado)
            const accumulatedExp = totalExp % 1000;
            document.getElementById('accumulated-exp').value = accumulatedExp;
            
            // Calcular siguiente nivel (simplificado)
            const nextLevel = 1000 - accumulatedExp;
            document.getElementById('next-level').value = nextLevel;
        }

        // Función para aplicar bonificadores raciales
        function applyRacialBonuses(race) {
            // Reiniciar bonificadores raciales
            racialBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
            
            // Aplicar bonificadores según la raza
            switch(race) {
                case 'aasimar':
                    racialBonus.cha = 2;
                    racialBonus.wis = 2;
                    break;
                case 'branquial':
                    racialBonus.con = 2;
                    racialBonus.dex = 2;
                    racialBonus.cha = -2;
                    break;
                case 'dhampir':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.con = -2;
                    break;
                case 'drow_plebeyo':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.con = -2;
                    break;
                case 'drow_noble':
                    racialBonus.dex = 2;
                    racialBonus.int = 2;
                    racialBonus.cha = 2;
                    racialBonus.con = -2;
                    break;
                case 'efrit':
                    racialBonus.dex = 2;
                    racialBonus.int = 2;
                    racialBonus.con = -2;
                    break;
                case 'elfo':
                    racialBonus.dex = 2;
                    racialBonus.int = 2;
                    racialBonus.con = -2;
                    break;
                case 'enano':
                    racialBonus.con = 2;
                    racialBonus.cha = -2;
                    break;
                case 'duergar':
                    racialBonus.con = 2;
                    racialBonus.wis = 2;
                    racialBonus.cha = -4;
                    break;
                case 'estricido':
                    racialBonus.str = 2;
                    racialBonus.con = 2;
                    racialBonus.int = -2;
                    break;
                case 'felido':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.wis = -2;
                    break;
                case 'gnomo':
                    racialBonus.con = 2;
                    racialBonus.cha = 2;
                    racialBonus.str = -2;
                    break;
                case 'svirfneblin':
                    racialBonus.dex = 2;
                    racialBonus.wis = 2;
                    racialBonus.cha = -4;
                    break;
                case 'humano':
                    // Humano: +2 a un atributo a elección (por defecto Fuerza)
                    racialBonus.str = 2;
                    break;
                case 'kitsune':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.str = -2;
                    break;
                case 'mediano':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.str = -2;
                    break;
                case 'orco':
                    racialBonus.str = 4;
                    racialBonus.int = -2;
                    racialBonus.cha = -2;
                    racialBonus.wis = -2;
                    break;
                case 'ratido':
                    racialBonus.dex = 2;
                    racialBonus.int = 2;
                    racialBonus.str = -2;
                    break;
                case 'replicante':
                    racialBonus.con = 2;
                    racialBonus.int = 2;
                    racialBonus.cha = -2;
                    break;
                case 'semielfo':
                    racialBonus.dex = 2;
                    break;
                case 'semiorco':
                    racialBonus.str = 2;
                    break;
                case 'suli':
                    racialBonus.str = 2;
                    racialBonus.cha = 2;
                    racialBonus.wis = -2;
                    break;
                case 'tiflin':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.int = -2;
                    break;
                case 'vanara':
                    racialBonus.dex = 2;
                    racialBonus.wis = 2;
                    racialBonus.cha = -2;
                    break;
                case 'vishkanya':
                    racialBonus.dex = 2;
                    racialBonus.cha = 2;
                    racialBonus.con = -2;
                    break;
            }
            
            updateAttributes();
        }

        // Función para aplicar bonificadores de trasfondo
        function applyBackgroundBonuses(backgroundName) {
            // Reiniciar bonificadores de trasfondo
            backgroundBonus = { str: 0, dex: 0, con: 0, int: 0, wis: 0, cha: 0 };
            
            const background = backgrounds.find(bg => bg.nombre === backgroundName);
            if (background) {
                const scores = background.puntuacionCaracteristica.split(' - ');
                
                scores.forEach(score => {
                    if (score.includes('+1 Fue')) backgroundBonus.str += 1;
                    if (score.includes('+1 Des')) backgroundBonus.dex += 1;
                    if (score.includes('+1 Con')) backgroundBonus.con += 1;
                    if (score.includes('+1 Int')) backgroundBonus.int += 1;
                    if (score.includes('+1 Sab')) backgroundBonus.wis += 1;
                    if (score.includes('+1 Car')) backgroundBonus.cha += 1;
                });
            }
            
            updateAttributes();
        }

        // Función para actualizar el tamaño según la altura
        function updateSizeFromHeight() {
            const height = parseInt(document.getElementById('height').value) || 0;
            const size = calculateSizeFromHeight(height);
            document.getElementById('size').value = size.charAt(0).toUpperCase() + size.slice(1);
            applySizeBonuses(size);
            updateSizeModifiers();
        }

        // Función para actualizar la tabla de modificadores de tamaño
        function updateSizeModifiers() {
            const sizeModifiersBody = document.getElementById('size-modifiers-body');
            sizeModifiersBody.innerHTML = '';
            
            for (const [size, modifiers] of Object.entries(sizeModifiers)) {
                const row = document.createElement('tr');
                
                // Resaltar la fila del tamaño actual
                const currentSize = document.getElementById('size').value.toLowerCase();
                if (size === currentSize) {
                    row.style.backgroundColor = 'var(--accent-color)';
                    row.style.fontWeight = 'bold';
                }
                
                row.innerHTML = `
                    <td>${size.charAt(0).toUpperCase() + size.slice(1)}</td>
                    <td>${modifiers.ca}</td>
                    <td>${modifiers.gaco}</td>
                    <td>${modifiers.fuerza}</td>
                `;
                sizeModifiersBody.appendChild(row);
            }
        }

        // Función para actualizar todos los modificadores de atributos en habilidades
        function updateAllSkillAttributes() {
            skillsConfig.forEach(skill => {
                const skillRow = findSkillRow(skill.name);
                if (skillRow) {
                    const attrMod = calculateModifier(parseInt(document.getElementById(`${skill.attribute}-total`).textContent));
                    const attrCell = skillRow.querySelector('.attribute-col');
                    attrCell.textContent = `${attrMod >= 0 ? `+${attrMod}` : attrMod}`;
                    updateSkillTotal(skill.name);
                }
            });
        }

        // Llenar el selector de trasfondos
        const backgroundSelect = document.getElementById('background');
        backgrounds.forEach(bg => {
            const option = document.createElement('option');
            option.value = bg.nombre;
            option.textContent = bg.nombre;
            backgroundSelect.appendChild(option);
        });

        // Mostrar información del trasfondo seleccionado
        backgroundSelect.addEventListener('change', function() {
            const selectedBackground = backgrounds.find(bg => bg.nombre === this.value);
            const backgroundInfo = document.getElementById('background-info');
            
            if (selectedBackground) {
                backgroundInfo.innerHTML = `
                    <div class="info-row">
                        <span class="info-label">Puntuación:</span>
                        <span>${selectedBackground.puntuacionCaracteristica}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Dote:</span>
                        <span>${selectedBackground.dote}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Competencias:</span>
                        <span>${selectedBackground.competenciaHabilidad}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Herramientas:</span>
                        <span>${selectedBackground.herramientas}</span>
                    </div>
                `;
                backgroundInfo.classList.add('active');
                
                // Aplicar bonificadores del trasfondo
                applyBackgroundBonuses(this.value);
            } else {
                backgroundInfo.classList.remove('active');
                applyBackgroundBonuses('');
            }
        });

        // Event listeners para atributos base
        document.querySelectorAll('#str-base, #dex-base, #con-base, #int-base, #wis-base, #cha-base').forEach(input => {
            input.addEventListener('input', updateAttributes);
        });

        // Event listeners para salvamentos
        document.querySelectorAll('#fort-class, #fort-prestige, #fort-misc, #fort-manual, #reflex-class, #reflex-prestige, #reflex-misc, #reflex-manual, #will-class, #will-prestige, #will-misc, #will-manual').forEach(input => {
            input.addEventListener('input', updateSavingThrows);
        });

        // Event listeners para experiencia
        document.querySelectorAll('#class1-exp, #class2-exp, #class3-exp, #prestige1-exp, #prestige2-exp, #prestige3-exp').forEach(input => {
            input.addEventListener('input', updateExperience);
        });

        // Event listeners para niveles de clases y prestigios
        document.querySelectorAll('#class1-level, #class2-level, #class3-level, #prestige1-level, #prestige2-level, #prestige3-level').forEach(input => {
            input.addEventListener('input', function() {
                setTimeout(() => {
                    calculateNEP();
                    updateRanksSummary();
                    updateMaxRanks();
                }, 100);
            });
        });

        // Event listener para raza
        document.getElementById('race').addEventListener('change', function() {
            applyRacialBonuses(this.value);
        });

        // Event listener para altura - actualiza tamaño automáticamente
        document.getElementById('height').addEventListener('input', updateSizeFromHeight);

        // Event listener para añadir experiencia
        document.getElementById('add-exp-btn').addEventListener('click', function() {
            const expToAdd = parseInt(document.getElementById('add-exp-input').value) || 0;
            if (expToAdd > 0) {
                // Por simplicidad, añadimos la experiencia a la primera clase
                const currentExp = parseInt(document.getElementById('class1-exp').value) || 0;
                document.getElementById('class1-exp').value = currentExp + expToAdd;
                updateExperience();
                document.getElementById('add-exp-input').value = '';
            }
        });

        // Event listener para cargar imagen
        document.getElementById('character-image').addEventListener('click', function() {
            alert('Función para cargar imagen del personaje. En una implementación real, esto abriría un selector de archivos.');
        });

        // Función para actualizar los máximos de rangos según NEP
        function updateMaxRanks() {
            const maxRank = calculateNEP();
            document.querySelectorAll('.skill-ranks').forEach(input => {
                input.max = maxRank;
            });
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            generateSkillsTable();
            updateAttributes();
            updateSavingThrows();
            updateExperience();
            calculateNEP();
            updateSizeFromHeight();
            updateRanksSummary();
        });
    </script>
</body>
</html>
